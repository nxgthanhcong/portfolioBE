<h2>Socials trashbin</h2>
<div class="actions mb-4">
    <a href="/socials">
        List socials
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Icon</th>
            <th scope="col">Color</th>
        </tr>
    </thead>
    <tbody>
        {{#each socials}}
        <tr>
            <th scope="row">{{this._id}}</th>
            <td>{{this.title}}</td>
            <td>{{this.icon}}</td>
            <td>{{this.color}}</td>
            <td>
                <a href="/socials/restore/{{this._id}}">
                    <button type="button" class="btn btn-link">Restore</button>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>